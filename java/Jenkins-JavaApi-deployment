pipeline  {
    agent any 

       parameters {
        string (
            name: 'TARGET_IP',
            defaultValue: '172.31.22.123',
            description: 'Enter target Ec2 Node for Java APP'
        )
    }
    
    
    stages {
        
        stage ('Install Packages   SSH') {
            
            steps {
                sshagent (credentials: ['AWS-SSH-KEY']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no  ec2-user@${TARGET_IP} '
                        sudo yum install git -y; 
                        sudo yum install java-17-amazon-corretto -y;
                        sudo yum install maven -y;
                        cd ~; rm -rf fruits-veg_market ;
                        git clone https://github.com/ahmedwoye/fruits-veg-market.git;
                        cd fruits-veg_market; 
                        sudo cp fruits.service /etc/systemd/system/Vegetables.service;
                        sudo systemctl  daemon-reload;
                        sudo systemctl restart Vegetables.service;
                        sudo systemctl status Vegetables.service  ' 
                    """
                }

            }
        }
    }
}

