pipeline  {
    agent any 

    parameters {
        string (
            name: 'PYTHON_NODE',
            defaultValue: '172.31.22.123',
            description: 'Enter the target Ec2 for Python App'
        )

        string (
            name: 'WEB_NODE',
            defaultValue: '172.31.22.123',
            description: 'Enter the target Ec2 for Web App'
        )

         string (
            name: 'JAVA_NODE',
            defaultValue: '172.31.22.123',
            description: 'Enter the target Ec2 for Web App'
        )

         
    }
    
    stages {
        
        stage ('Install Packages   SSH') {
            
            steps {
                sshagent (credentials: ['AWS-SSH-KEY']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no  ec2-user@${WEB_NODE} '
                        sudo yum install git -y; 
                        sudo yum install nginx -y;
                        sudo systemctl start nginx; 
                        cd ~; rm -rf fruits-veg_market ;
                        git clone https://github.com/ahmedwoye/fruits-veg-market.git;
                        cd fruits-veg_market;
                        sed 's/FRUIT_MACHINE/${PYTHON_NODE}g'-i web/index.html;
                        sed 's/VEG_MACHINE/${JAVA_NODE}g'-i web/index.html;
                        sudo cp web/index.html  /usr/share/nginx/html/ ' 
                    """
                }

            }
        }
    }
}

